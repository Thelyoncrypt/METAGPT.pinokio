{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "git clone https://github.com/geekan/MetaGPT.git MetaGPT"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "sudo npm install -g mermaid-js/mermaid-cli"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "cd MetaGPT && python setup.py install"
      }
    },
    {
      "method": "shell.enter",
      "params": {
        "message": "npm install mermaid-js/mermaid-cli",
        "path": "MetaGPT"
      }
    },
    {
      "method": "notify",
      "params": {
        "html": "<b>Success</b> Successfully installed MetaGPT. You can now use it to create programs with a single prompt!"
      }
    }
  ]
}
